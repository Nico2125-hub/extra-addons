<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='pos-receipt-contact']" position="inside">
            <t t-if='receipt.client'>
                <div style="font-size: 13px; text-align: left; font-family: 'Times New Roman', serif;">
                    <strong>CLIENTE</strong><br/>
                    <strong>DNI:</strong> <t t-esc="receipt.client.vat" /><br />
                    <t t-esc="receipt.client.name" /><br />
                    <t t-esc="receipt.client.city" /><br />
                    <strong>FECHA EMISION:</strong> <t t-esc="receipt.OrderReceipt_date" /><br />
                    <strong>FECHA DE VENCIMIENTO:</strong> <t t-esc="receipt.date_deadline" /><br />
                    <strong>MONEDA:</strong> <t t-esc="receipt.currency.name" />
                </div>
            </t>
        </xpath>
        <t t-if="receipt.productos">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>CANT.</th>
                        <th>DESCRIPCION</th>
                        <th>P/U</th>
                        <th>TOTAL</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="receipt.productos" t-as="producto">
                        <tr>
                            <td><t t-esc="producto.quantity" /></td>
                            <td><t t-esc="producto.name" /></td>
                            <td><t t-esc="producto.price_unit" /></td>
                            <td><t t-esc="producto.price_total" /></td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </t>
</templates>
