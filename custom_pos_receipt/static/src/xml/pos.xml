<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='pos-receipt-contact']" position="inside">
            <t t-if='receipt.partner'>
                <div style="font-weight: bold;">
                    CLIENTE<br/>
                    DNI: <t t-esc="receipt.partner.vat or ''"/><br/>
                    Nombre del Cliente: <t t-esc="receipt.partner.name"/><br/>
                    Dirección: <t t-esc="receipt.partner.street or ''"/><br/>
                </div>
            </t>
        </xpath>
        <br/>
        <div style="text-align: center; font-weight: bold;">
            FECHAEMISION: <t t-esc="order.formatted_validation_date or order.validation_date"/><br/>
            FECHADEVENC: <t t-esc="order.due_date or ''"/><br/>
            TIPO DE MONEDA: <t t-esc="order.currency_id.name or ''"/><br/>
        </div>
        <br/>
        <table class="receipt-orderlines" style="font-size: 15px; border-style: double; border-left: none; border-right: none; border-bottom: none; width: 100%;">
            <colgroup>
                <col width="40%"/>
                <col width="38%"/>
                <col width="30%"/>
            </colgroup>
            <tr style="border-bottom: 1px dashed black;">
                <th style="text-align: left;">[CANT.] DESCRIPCIÓN</th>
                <th style="text-align: center;">P/U</th>
                <th style="text-align: center;">TOTAL</th>
            </tr>
            <tr t-foreach="orderlines" t-as="orderline">
                <td style="padding-top: 1%; padding-bottom: 1%;">
                    <t t-esc="orderline.get_product().display_name"/>
                    <t t-if="orderline.get_discount() > 0">
                        <div style="font-size: 12px; font-style: italic; color: #808080;">
                            <t t-esc="orderline.get_discount()"/> discount
                        </div>
                    </t>
                </td>
                <td style="text-align: center;"><span t-esc="orderline.price_unit"/></td>
                <td style="text-align: center;"><span t-esc="orderline.price_subtotal"/></td>
            </tr>
        </table>
        <br/>
        <div class="total" style="font-size: 15px;">
            Gravada: <span t-esc="order.amount_untaxed"/><br/>
            IGV: <span t-esc="order.amount_tax"/><br/>
            TOTAL: <span t-esc="order.amount_total"/><br/>
            <span t-esc="formatLang(order.amount_total, dp='Account', currency_obj=order.currency_id)"/>
        </div>
        <br/>
        <div class="payment-info" style="font-size: 15px;">
            FORMA DE PAGO<br/>
            ‘Vendido por: <span t-esc="receipt.cashier"/> (<span t-esc="order.date_order"/>)
        </div>
    </t>
</templates>
