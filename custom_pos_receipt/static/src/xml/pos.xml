<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='pos-receipt-contact']" position="inside">
            <t t-if='receipt.client'>
                <div style="font-size: 13px; text-align: left; font-family: 'Times New Roman', serif;">
                    <strong>CLIENTE</strong><br/>
                    <strong>DNI:</strong> <t t-esc="receipt.client.vat" /><br />
                    <t t-esc="receipt.client.name" /><br />
                    <t t-esc="receipt.client.city" /><br />
                    <strong>FECHA EMISION:</strong>
                    <t t-if="receipt.move_type in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']">
                        <t t-esc="receipt.invoice_date" />
                    </t>
                    <t t-else="">
                        <t t-esc="receipt.date" />
                    </t>
                    <br />
                    <strong>FECHA DE VENCIMIENTO:</strong><t t-esc="receipt.invoice_date_due" /><br />
                    <strong>MONEDA:</strong><t t-esc="receipt.currency_id.name" /><br />
                </div>
            </t>
        </xpath>
    </t>
</templates>
