<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='pos-receipt-contact']" position="inside">
            <t t-if='receipt.client'>
                <div style="font-size: 13px; text-align: left; font-family: 'Times New Roman', serif;">
                    <strong>CLIENTE</strong><br/>
                    <strong>DNI:</strong> <t t-esc="receipt.client.vat" /><br />
                    <t t-esc="receipt.client.name" /><br />
                    <t t-esc="receipt.client.city" /><br />
                    <strong>FECHA EMISION:</strong> <t t-esc="receipt.OrderReceipt_date" /><br />
                    <strong>FECHA DE VENCIMIENTO:</strong> <t t-esc="receipt.date_deadline" /><br />
                    <strong>MONEDA:</strong> <t t-esc="receipt.currency.name" /><br />
                </div>
            </t>
        </xpath>
        <table class="receipt-orderlines" style="font-size: 15px; border-style: double; border-left: none; border-right: none; border-bottom: none; width: 160%;">
            <colgroup>
                <col width="40%" />
                <col width="30%" />
                <col width="30%" />
            </colgroup>
            <tr style="border-bottom: solid;">
                <th style="text-align: left;">[CANT]</th>
                <th style="text-align: left;">DESCRIPCION</th>
                <th style="text-align: right;">P/U</th>
                <th style="text-align: right;">TOTAL</th>
            </tr>
            <t t-foreach="receipt.orderlines" t-as="line">
                <tr>
                    <td style="padding-top: 1%; padding-bottom: 1%; text-align: left;">
                        <t t-esc="line.qty"/>
                    </td>
                    <td style="padding-top: 1%; padding-bottom: 1%; text-align: left;">
                        <t t-esc="line.product.display_name"/>
                        <t t-if="line.get_discount() &gt; 0">
                            <div style="font-size: 10px; font-style: italic; color: grey;">
                                <t t-esc="'-' + str(line.get_discount()) + ' discount'"/>
                            </div>
                        </t>
                    </td>
                    <td style="padding-top: 1%; padding-bottom: 1%; text-align: right;">
                        <t t-esc="line.price_unit"/>
                    </td>
                    <td style="padding-top: 1%; padding-bottom: 1%; text-align: right;">
                        <t t-esc="line.price_subtotal"/>
                    </td>
                </tr>
            </t>
        </table>
    </t>
</templates>
